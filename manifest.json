{
  "manifest_version": 3,
  "name": "ataAlAnglit",
  "version": "1.0",
  "description": "המרת טקסט שהוקלד באנגלית במקום בעברית",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon16.svg",
      "48": "icon48.svg",
      "128": "icon128.svg"
    },
    "default_title": "ataAlAnglit",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  },
  "commands": {
    "convert-text": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "המרת טקסט מאנגלית לעברית"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ]
} 